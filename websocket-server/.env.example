# DND Quiz WebSocket Server - Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# WordPress Integration
WORDPRESS_URL=http://wordpress
WORDPRESS_SECRET=change-this-to-match-wordpress-setting

# JWT Configuration
JWT_SECRET=change-this-to-match-wordpress-setting

# CORS Configuration
CORS_ORIGIN=http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# PM2 Configuration
PM2_INSTANCES=max
